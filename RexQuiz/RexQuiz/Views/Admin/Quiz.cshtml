<main class="main">
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Home</li>
        <li class="breadcrumb-item">
            <a href="#">Tutor</a>
        </li>

        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="#">
                    <i class="icon-speech"></i>
                </a>

            </div>
        </li>
    </ol>
    <div class="container-fluid">
        <div class="animated fadeIn">

            <!-- /.row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="col-sm-9 col-lg-12">
                        <div class="col-md-7">
                            <div class="card-group">
                                <div class="card p-4">
                                    <div class="card-body">
                                        <h1>Create a Quiz</h1>
                                        <p class="text-muted">Please fill all required field</p>


                                        <div class="form-check form-check-inline mr-1">
                                            <input class="form-check-input" id="inline-checkbox1" type="radio" value="check1" name="test">
                                            <label class="form-check-label" for="inline-checkbox1">Public</label>
                                        </div>
                                        <div class="form-check form-check-inline mr-1">
                                            <input class="form-check-input" id="inline-checkbox2" type="radio" value="check2" name="test">
                                            <label class="form-check-label" for="inline-checkbox2">Private</label>
                                        </div>




                                        <div class="form-group">
                                            <label class="form-col-form-label" for="inputSuccess1">Title</label>
                                            <input class="form-control is-valid" id="inputSuccess1" type="text">
                                        </div>

                                        <div class="form-group">
                                            <label class="form-col-form-label" for="inputSuccess1">Quiz Type</label>
                                            <select class="form-control is-valid" id="select1" name="select1">
                                                <option value="0">Please Select Type</option>
                                                <option value="1">Option #1</option>
                                                <option value="2">Option #2</option>
                                                <option value="3">Option #3</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-col-form-label" for="inputSuccess1">Quiz Category</label>
                                            <select class="form-control is-valid" id="select1" name="select1">
                                                <option value="0">Please Select Category</option>
                                                <option value="1">Option #1</option>
                                                <option value="2">Option #2</option>
                                                <option value="3">Option #3</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-col-form-label" for="inputSuccess1">Quiz Level</label>
                                            <select class="form-control is-valid" id="select1" name="select1">
                                                <option value="0">Please Select Level</option>
                                                <option value="1">Option #1</option>
                                                <option value="2">Option #2</option>
                                                <option value="3">Option #3</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-col-form-label" for="inputSuccess1">Number Of Question</label>
                                            <input class="form-control is-valid" id="inputSuccess1" type="text">
                                        </div>

                                        <div class="col-lg-3" style="padding-bottom: 5px; margin: auto">
                                            <div class="col-6">
                                                <a asp-controller="Admin" asp-action="AddQuiz"><button class="btn btn-primary px-4" type="button">Continue</button></a>
                                            </div>
                                        </div>

                                    </div>
                                </div>
