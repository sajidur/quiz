                                                <a href="/Account/Register"><button class="btn btn-primary active mt-3" type="button">Register Now!</button></a>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.row-->
                <!-- /.row-->
            </div>

        </div>
    </div>
</main>



